{% extends 'base.twig' %}

{% block content %}
	<main>
		<div class="container">
			<form
				class="password-form"
				action="{{ site.site_url }}/wp-login.php?action=postpass"
				method="post"
			>
				<label for="pwbox-{{ post.ID }}">Password:</label>
				<input
					class="password-box"
					name="post_password"
					id="pwbox-{{ post.ID }}"
					type="password"
					placeholder="Password"
					size="20"
					maxlength="20"
				>
				<input class="password-btn" type="submit" name="Submit" value="Submit">
			</form>
		</div>
	</main>
{% endblock %}
