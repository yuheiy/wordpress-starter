{% extends 'base.twig' %}

{% block content %}
	<main>
		<article class="container max-w-xl">
			<header>
				<h1 class="mt-16 text-xl font-bold kerning">{{ post.title }}</h1>
				<p class="mt-2 text-sm">
					<time datetime="{{ post.date('Y-m-d H:i:s') }}">{{ post.date }}</time>
				</p>
			</header>

			<div class="mt-8 mb-12 border-t"></div>

			<div class="prose">
				{{ post.content }}
			</div>
		</article>
	</main>
{% endblock %}
